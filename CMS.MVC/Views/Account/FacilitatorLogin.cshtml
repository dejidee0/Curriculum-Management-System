@{
    ViewData["Title"] = "Facilitator Login";
}


<header>
    <nav> <partial name="_LogoPartial" /></nav>
</header>
<main>
    <section class="customFlex">
        <div class="ParentContainer">
            <div class="innerParentContainer">
                <div class="welcome">
                    <h2>Welcome, Facilitator</h2>
                    <p>Login with your Decagon credentials</p>
                </div>
                <div class="d-flex gap-2 flex-column justify-content-center">
                    <div class="SignGoogle">
                        <div>
                            <img src="/images/Socialicon.png" />
                            <p>Sign in with Google</p>
                        </div>
                    </div>
                    <p class="text-center">Or</p>
                    <div class="d-flex flex-column">
                        <p class="textBold">Decagon email</p>
                        <input type="text" placeholder="Enter your Decagon email" />
                    </div>
                    <div class="d-flex flex-column">
                        <p class="textBold">Password</p>
                        <input type="text" placeholder="Type in your password" />
                        <p class="spec">Forgot Password?</p>
                    </div>
                    <button class="btn btn-primary">Continue</button>
                </div>
            </div>
        </div>
        <img src="/images/loginhero.png" alt="FacilitatorLoginPage" />
    </section>
</main>