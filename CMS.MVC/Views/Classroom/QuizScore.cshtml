@{
    Layout = "~/Views/Shared/_QuizScoreLayout.cshtml";
}

<div class="d-flex flex-column gap-4">
    <a asp-controller="Dashboard" asp-action="DecadevsPage">
        <div class="d-flex align-items-center gap-2"><i class="bi bi-arrow-left" id="grey"></i><span id="grey1">Go Back</span></div>
    </a>
    <h1 id="grey" class="mb-4">Quiz Summary</h1>
</div>
<section class="d-flex inner-container gap-4 justify-content-between">
    <div class="right-big-side" >
        <div class="card-design">
            <div class="mb-4">
                <i class="bi bi-check-circle-fill" id="checkCol"></i>
            </div>
            <h1 style="color:#101828">Congratulation</h1>
            <p>on completing the quiz!</p>
        </div>
        <div class="card-design">
            <p>Your score is</p>
            <span class="number">58%</span>
            <p>and we hope you had fun testing your knowledge.Below you'll find</p>
            <p>a summary of your performance</p>
            <hr style="width: 70%" />
            <p>Correct answers: <span class="num">50</span></p>
            <p>Incorrect answers: <span class="textDanger">6</span></p>
            <p>Skipped questions:<span class="num"> 2</span></p>
        </div>
        <div class="card-design">
            <p>Your score history</p>
            <hr style="width: 70%" />
            <p>Week 1: <span class="num"> 45</span></p>
            <p>Week 2: <span class="num"> 63</span></p>
            <p>Week 3: <span class="num"> 44</span></p>
            <p>Week 4: <span class="num"> 58</span></p>
        </div>

    </div>
    <div class="left-small-side">
        <form>
            <h3>
                Are you satisfied with your Quiz score?
            </h3>
            <div class="d-flex gap-2 align-items-center">
                <input type="checkbox" id="checkbox1" name="checkbox1" />
                <label for="checkbox1">Yes</label>
            </div>

            <div class="d-flex gap-2 align-items-center">
                <input type="checkbox" id="checkbox2" name="checkbox2" />
                <label for="checkbox2">No</label>
            </div>

            <div>
                <textarea id="textarea1" name="textarea1" placeholder="Any reason? Type message"></textarea>
            </div>

            <button type="submit">Request Review</button>
        </form>
    </div>
</section>